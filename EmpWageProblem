package practice;

import java.util.Random;

public class Main1 {

	public static void main(String[] args) {
		
		Computation obj1=new Computation();
		obj1.empbuilder();
		
	}

}

package practice;

import java.util.Random;

public class Computation {

	int wagePerHour=20;
	int fullDayHours=8;
	int fullWage=wagePerHour*fullDayHours;
	int halfWage=fullWage/2;
	int noWage=0;
	
	public void empbuilder() {
	
		System.out.println("--Employee Wage Builder--");
		System.out.println(" ");
		
		Random rand=new Random();
		int attendance=rand.nextInt(3);
		
		switch(attendance) {
		
		case 0:
			System.out.println("Employee is Absent");
			System.out.println(noWage);
			System.out.println(" ");
			break;
			
		case 1:
			System.out.println("Employee is Parttime");
			System.out.println(halfWage);
			System.out.println(" ");
			break;
			
		case 2:
			System.out.println("Employee is Present");
			System.out.println(fullWage);
			System.out.println(" ");
			break;
		}
		
	}
	
	
}

